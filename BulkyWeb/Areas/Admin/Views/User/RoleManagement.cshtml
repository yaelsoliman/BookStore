@model RoleManagementVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Create" class="row">
            <div class="border p-3">
                @*        <div asp-validation-summary="All"></div>
                *@ <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms-2 text-dark">Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Role" asp-items="Model.RoleList" class="form-control border-0 shadow"></select>

                </div>
                @{
                    var companyVisible = "display:none;";
                }
                @if (Model.ApplicationUser.Role == SD.Role_Company)
                {
                    companyVisible = "display:block;";
                }
                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Company" style="@companyVisible" asp-items="Model.CompanyList" class="form-control border-0 shadow"></select>

                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selection = $('#ApplicationUser_Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#ApplicationUser_Company').show();
                }
                else {
                    $('#ApplicationUser_Company').hide();
                }
            })
        })
    </script>
}
