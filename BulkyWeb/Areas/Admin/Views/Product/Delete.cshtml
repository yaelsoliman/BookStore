@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*        <div asp-validation-summary="All"></div>
                *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" disabled />
                    <label asp-for="Title" class="ms-2 text-dark">Title</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" disabled />
                    <label asp-for="Description" class="m-2 text-dark">Description</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" disabled />
                    <label asp-for="ISBN" class="m-2 text-dark">ISBN</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" disabled />
                    <label asp-for="Author" class="m-2 text-dark">Author</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
                    <label asp-for="ListPrice" class="m-2 text-dark">ListPrice</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" disabled />
                    <label asp-for="Price" class="m-2 text-dark">Price</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" disabled />
                    <label asp-for="Price50" class="m-2 text-dark">Price50</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" disabled />
                    <label asp-for="Price100" class="m-2 text-dark">Price100</label>

                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

